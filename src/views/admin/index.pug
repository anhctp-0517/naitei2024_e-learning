doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= t('dashboard.title')
    link(rel='stylesheet', href='/stylesheets/global.css')
    link(rel='stylesheet', href='/stylesheets/tailwind.min.css')
  body.bg-gray-100.h-screen.flex
    //- Sidebar
    aside.w-64.bg-white.p-4.shadow-lg
      .flex.items-center.justify-center.mb-8
        img.h-8(src='/favicon.ico', alt=t('logo.alt'))
        span.self-center.text-2xl.font-semibold.whitespace-nowrap(
          class='dark:text-white'
        )= t('logo.name')
      nav
        ul
          li.mb-4
            a.flex.items-center.hover-text-teal-800(href='/admin')
              svg.w-5.h-5.mr-2(
                xmlns='http://www.w3.org/2000/svg',
                fill='none',
                viewBox='0 0 24 24',
                stroke='currentColor'
              )
                path(
                  stroke-linecap='round',
                  stroke-linejoin='round',
                  stroke-width='2',
                  d='M12 8v8m4-4H8'
                )
              | #{ t('sidebar.statistics') }
          li.mb-4
            a.flex.items-center.hover-text-teal-800(
              href='/admin/pending-instructors'
            )
              svg.w-5.h-5.mr-2(
                xmlns='http://www.w3.org/2000/svg',
                fill='none',
                viewBox='0 0 24 24',
                stroke='currentColor'
              )
                path(
                  stroke-linecap='round',
                  stroke-linejoin='round',
                  stroke-width='2',
                  d='M12 8v8m4-4H8'
                )
              | #{ t('sidebar.approve_instructor') }
          li.mb-4
            a.flex.items-center.hover-text-teal-800(
              href='/admin/list-instructors'
            )
              svg.w-5.h-5.mr-2(
                xmlns='http://www.w3.org/2000/svg',
                fill='none',
                viewBox='0 0 24 24',
                stroke='currentColor'
              )
                path(
                  stroke-linecap='round',
                  stroke-linejoin='round',
                  stroke-width='2',
                  d='M12 8v8m4-4H8'
                )
              | #{ t('sidebar.list_instructors') }
          li.mb-4
            a.flex.items-center.hover-text-teal-800(href='/list-courses')
              svg.w-5.h-5.mr-2(
                xmlns='http://www.w3.org/2000/svg',
                fill='none',
                viewBox='0 0 24 24',
                stroke='currentColor'
              )
                path(
                  stroke-linecap='round',
                  stroke-linejoin='round',
                  stroke-width='2',
                  d='M12 8v8m4-4H8'
                )
              | #{ t('sidebar.list_courses') }

    //- Main content
    .flex-1.p-8
      //- Top bar
      .flex.justify-between.items-center.mb-8
        h1.text-2xl.font-bold ADMIN

        // Language Selector
        .ml-auto.flex.items-center.space-x-3.mr-8
          a.flex.items-center(href='?lng=en')
            img.flag.w-6.h-4.mr-4(src='/images/eng-flag.png', alt='avatar')
            | #{ t('english') }
          .border-l.border-gray-300.h-4
          a.flex.items-center(href='?lng=vi')
            img.flag.w-6.h-4.mr-4(
              src='/images/vietnam-flag.png',
              alt='vietnam-flag'
            )
            | #{ t('vietnamese') }

        .flex.items-center.relative.ml-16
          button#dropdownToggle.mr-4.text-gray-600.hover-text-gray-800(
            type='button'
          )
            svg.w-6.h-6(
              xmlns='http://www.w3.org/2000/svg',
              fill='none',
              viewBox='0 0 24 24',
              stroke='currentColor'
            )
              path(
                stroke-linecap='round',
                stroke-linejoin='round',
                stroke-width='2',
                d='M12 4v16m8-8H4'
              )
          #dropdownMenu.absolute.right-0.mt-2.w-48.bg-white.border.border-gray-300.rounded.shadow-lg.hidden
            .flex.flex-col.items-start.p-2
              .flex.items-center
                img.rounded-full.mr-2.w-8.h-8(
                  src='/images/user.png',
                  alt='avatar'
                )
                if user
                  span.font-semibold= user.name
                else
                  span.font-semibold Username
                svg.ml-1.w-4.h-4(
                  xmlns='http://www.w3.org/2000/svg',
                  fill='none',
                  viewBox='0 0 24 24',
                  stroke='currentColor'
                )
                  path(
                    stroke-linecap='round',
                    stroke-linejoin='round',
                    stroke-width='2',
                    d='M19 9l-7 7-7-7'
                  )
              a.mt-2.text-sm.text-teal-600.hover-text-teal-800(
                href='/auth/logout'
              )= t('logout')
      //- Content
      main.flex-1.p-4
      block content

  script(src='/javascripts/admin-index.js')
