extends ../layout

block content
    h1 #{title}

    form(method='POST')
        div.mb-3
            label(for='name') Name
            input#name.form-control(
                type='text'
                placeholder='Cao Thi Phuong Anh'
                name='name'
                required
                value=(user === undefine ? '' : user.name)
            )
        div.mb-3
            label(for='email') Email
            input#email.form-control(
                type='email'
                placeholder='example@gmail.com'
                name='email'
                required
                value=(user === undefine ? '' : user.email)
            )
        div.mb-3
            label(for='username') Username
            input#username.form-control(
                type='username'
                placeholder='abc'
                name='username'
                required
                value=(user === undefine ? '' : user.username)
            )
        div.mb-3
            label(for='birthday') Birthday
            input#birthday.form-control(
                type='date'
                name='birthday'
                required
                value=(user === undefine ? '' : user.birthday)
            )
        div.mb-3
            label(for='avatar') Avatar
            input#avatar.form-control(
                type='file'
                name='avatar'
                required
                value=(user === undefine ? '' : user.avatar_url)
            )
        div.mb-3.input-group
            label.input-group-text(for="role") Role
            select.form-select#role
                option(value=UserRole.ADMIN selected=user === undefine ? true : user.role === UserRole.ADMIN) ADMIN
                option(value=UserRole.INSTRUCTOR selected=user === undefine ? false : user.role === UserRole.INSTRUCTOR) INSTRUCTOR
                option(value=UserRole.STUDENT selected=user === undefine ? false : user.role === UserRole.STUDENT) STUDENT
    button.btn.btn-primary.mb(type='submit') Submit
